<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fetch_with_data_state"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fetch_with_data_state_header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-black"
        android:text="企業情報"
        android:textColor="@color/top_view_cell_text_enabled"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fetch_with_data_state_header_label">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="和名"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fetch_with_data_state_company_name_jp_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="英名"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fetch_with_data_state_company_name_en_Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="所在地"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fetch_with_data_state_address_label"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="1"
                android:textAlignment="textStart"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp"
                tools:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="設立日"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fetch_with_data_state_foundation_date_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="資本金"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fetch_with_data_state_capital_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="従業員数"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fetch_with_data_state_number_of_employee_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/top_view_cell_text_enabled"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/fetch_with_data_state_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Fetch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/fetch_with_data_state_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/fetch_with_data_state_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>